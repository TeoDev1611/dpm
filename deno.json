{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "tasks": {
    "check": "deno fmt -c deno.json --check && deno lint -c deno.json",
    "update": "deno run -A https://deno.land/x/udd/main.ts ./src/modules/deps.ts",
    "fmt": "deno fmt -c deno.json ; deno lint -c deno.json",
    "fmt:check": "deno fmt -c deno.json --check ; deno lint -c deno.json",
    "clean": "deno run -A --unstable --import-map=./import_map.json ./dev.ts clean"
  }
}
